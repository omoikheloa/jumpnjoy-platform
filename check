server {
    listen 80;
    server_name your_server_ip_or_domain;

    root /home/jump/Documents/jumpnjoy-frontend/dist;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    location /api/ {
        proxy_pass http://127.0.0.1:8000/;  # Django backend running locally
    }
}
