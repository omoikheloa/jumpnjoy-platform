[Unit]
Description=Gunicorn daemon for Django project
After=network.target

[Service]
User=your_username
Group=www-data
WorkingDirectory=/home/your_username/myapp/yourrepo/backend
ExecStart=/home/your_username/myapp/yourrepo/backend/venv/bin/gunicorn --workers 3 --bind unix:/home/your_username/myapp/yourrepo/backend.sock yourproject.wsgi:application

[Install]
WantedBy=multi-user.target
